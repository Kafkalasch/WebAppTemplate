{
    "compilerOptions": {
        "outDir": "./build/",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "target": "es5",
        "lib": ["es2018", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"],
            "assets/*": ["./assets/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "compileOnSave": true
}
